platform :ios, '8.0'
use_frameworks!

target 'Ride Report' do
    pod 'ECSlidingViewController', '~> 2.0.3'
    pod 'Fabric'
    pod 'Crashlytics'
    pod 'KeychainAccess'
    pod 'Alamofire', '~> 3.0'
    pod 'OAuthSwift'
    pod 'FBSDKCoreKit'
    pod 'FBSDKLoginKit'
    pod 'FBSDKShareKit'
    pod 'Mapbox-iOS-SDK'
    pod 'Mixpanel'
    pod 'SwiftyJSON'
    pod 'CocoaLumberjack/Swift', :git => 'https://github.com/CocoaLumberjack/CocoaLumberjack.git', :branch => 'swift_2.0'
    pod 'Kingfisher', '~> 2.3'
end

target 'Motion' do
    pod 'Mixpanel'
    pod 'Alamofire', '~> 3.0'
    pod 'OAuthSwift'
    pod 'SwiftChart'
    pod 'SwiftyJSON'
    pod 'CocoaLumberjack/Swift', :git => 'https://github.com/CocoaLumberjack/CocoaLumberjack.git', :branch => 'swift_2.0'
end

post_install do |installer|
    installer.pods_project.targets.each do |target|
        target.build_configurations.each do |config|
            config.build_settings['ENABLE_BITCODE'] = 'NO'
            config.build_settings['SWIFT_VERSION'] = '2.3'
        end
    end
end
