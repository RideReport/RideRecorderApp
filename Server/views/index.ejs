</head>

<body>
	<div id="map"></div>
	<script>
  	var map = L.map('map').setView([45.52, -122.6519], 14);
  	var tripLayerGroup = L.layerGroup().addTo(map);
  	L.tileLayer('http://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
  		maxZoom: 18,
  		attribution: 'Map data &copy; <a href="http://openstreetmap.org">OpenStreetMap</a> contributors, <a href="http://creativecommons.org/licenses/by-sa/2.0/">CC-BY-SA</a>'
  	}).addTo(map);

  	function getTrips(e){			
  		bounds = map.getBounds();
  		url = "trips";
  		$.get(url, drawTripsOnMap, "json")
  	}
  	function drawTripsOnMap(trips){
  		map.removeLayer(tripLayerGroup);

  		for (var i = 0; i < trips.length; i++){
  			trip = trips[i];
  			locs = trip.locations.map(function(loc) {return loc.pos});
  			
  			var polyline = new L.Polyline(
  			  locs, 
  			  {color: 'green',
          weight: 3,
          opacity: 0.9,
          smoothFactor: 1}
        );
        console.log(polyline);
        polyline.addTo(map);
  		}
  	}
  	map.on('dragend', getTrips);	
  	map.on('zoomend', getTrips);
  	map.whenReady(getTrips)    

  </script>
</body>